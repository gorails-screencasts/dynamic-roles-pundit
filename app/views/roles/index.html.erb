


<div class="row">
  <div class="col-sm-6">
    <h1>Roles</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_role_path, class: 'btn btn-primary' do %>
    Add New Role
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Permissions</th>
            
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <%= content_tag :tr, id: dom_id(role), class: dom_class(role) do %>
          
            <td><%= link_to role.name, role %></td>
          

                      <td><%= role.permissions %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
